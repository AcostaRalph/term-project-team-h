<!DOCTYPE html>
<html>
  <head>
    <title>Lobby</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
  $(function () {
    const socket = io();
    $('form').submit(function(){
      socket.emit('chat message', $('#m').val());
      $('#m').val('');
      return false;
    });
    socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(msg));
    });
  });
</script>
  <body>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>

    <table id="lobby">
      <tr id="lobby-headers">
          <td id="lobby-title">Welcome to Texas Hold-Em Poker Lobby</td>
      </tr> </table>
    <div style="background-color:navy;color:white;padding:20px;">
        <h1 style="text-align:center;"> Welcome to Texas Holdem </h1>
        <h2 style="text-align:center;">Please, Select a game:</h2>
        <p style="text-align:center;"> <button>Start New Game</button> </p>
        <style>
            .game {
                background-color: powderblue;
                color: white;
                padding: 3px;
            }
        </style>
        <h2 class="game">Game 1 <button>Join Game</button> </p> </h2>
        <h2 class="game">Game 2 <button>Join Game</button> </p> </h2>

    </div>


  </body>
</html>